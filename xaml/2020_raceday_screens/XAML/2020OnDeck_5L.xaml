<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="On Deck"
    Width="275"
    ResizeMode="CanResize"
    Background="Black"
    SizeToContent="Manual"
    WindowStartupLocation="CenterScreen"
>

    <!-- Load Theme Information -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="2020ThemeDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <!-- End Load Theme Information -->

    <Viewbox Stretch="Fill">
        <Grid Background="{StaticResource brushSecondary}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.RowSpan="2" Grid.Row="0" Margin="3">
                <DockPanel LastChildFill="False" HorizontalAlignment="Center">
                    <TextBlock Text="On Deck" DockPanel.Dock="Left" FontSize="15" />
                </DockPanel>

                <!-- ********************** -->
                <!-- *    Lane 1 Start    * -->
                <!-- ********************** -->
                <Grid>
                    <TextBlock Name="OnDeckNickname1_1" Background="Black" FontSize="15" Foreground="Transparent" Margin="2,0,2,0" Padding="10,2" />
                    <DockPanel LastChildFill="False" Margin="2,0,2,0">
                        <TextBlock Name="OnDeckNickname1_2" Background="Black" FontSize="15" Foreground="Black" Margin="2,0,2,0" Padding="10,2" />
                    </DockPanel>
                </Grid>
                <!-- ********************** -->
                <!-- *    Lane 1 End      * -->
                <!-- ********************** -->

                <!-- ********************** -->
                <!-- *    Lane 2 Start    * -->
                <!-- ********************** -->
                <Grid>
                    <TextBlock Name="OnDeckNickname2_1" Background="Black" FontSize="15" Foreground="Transparent" Margin="2,0,2,0" Padding="10,2" />
                    <DockPanel LastChildFill="False" Margin="2,0,2,0">
                        <TextBlock Name="OnDeckNickname2_2" Background="Black" FontSize="15" Foreground="Black" Margin="2,0,2,0" Padding="10,2" />
                    </DockPanel>
                </Grid>
                <!-- ********************** -->
                <!-- *    Lane 2 End      * -->
                <!-- ********************** -->

                <!-- ********************** -->
                <!-- *    Lane 3 Start    * -->
                <!-- ********************** -->
                <Grid>
                    <TextBlock Name="OnDeckNickname3_1" Background="Black" FontSize="15" Foreground="Transparent" Margin="2,0,2,0" Padding="10,2" />
                    <DockPanel LastChildFill="False" Margin="2,0,2,0">
                        <TextBlock Name="OnDeckNickname3_2" Background="Black" FontSize="15" Foreground="Black" Margin="2,0,2,0" Padding="10,2" />
                    </DockPanel>
                </Grid>
                <!-- ********************** -->
                <!-- *    Lane 3 End      * -->
                <!-- ********************** -->

                <!-- ********************** -->
                <!-- *    Lane 4 Start    * -->
                <!-- ********************** -->
                <Grid>
                    <TextBlock Name="OnDeckNickname4_1" Background="Black" FontSize="15" Foreground="Transparent" Margin="2,0,2,0" Padding="10,2" />
                    <DockPanel LastChildFill="False" Margin="2,0,2,0">
                        <TextBlock Name="OnDeckNickname4_2" Background="Black" FontSize="15" Foreground="Black" Margin="2,0,2,0" Padding="10,2" />
                    </DockPanel>
                </Grid>
                <!-- ********************** -->
                <!-- *    Lane 4 End      * -->
                <!-- ********************** -->

                <!-- ********************** -->
                <!-- *    Lane 5 Start    * -->
                <!-- ********************** -->
                <Grid>
                    <TextBlock Name="OnDeckNickname5_1" Background="Black" FontSize="15" Foreground="Transparent" Margin="2,0,2,0" Padding="10,2" />
                    <DockPanel LastChildFill="False" Margin="2,0,2,0">
                        <TextBlock Name="OnDeckNickname5_2" Background="Black" FontSize="15" Foreground="Black" Margin="2,0,2,0" Padding="10,2" />
                    </DockPanel>
                </Grid>
                <!-- ********************** -->
                <!-- *    Lane 5 End      * -->
                <!-- ********************** -->







            </StackPanel>
        </Grid>
    </Viewbox>
</Window>